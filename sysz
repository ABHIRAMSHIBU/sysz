#!/usr/bin/python2
import time
import os

def init():
	c=0
	for i in range(100):
		cols=int(os.popen("tput cols").read().strip())	
		os.system('clear');
		print "I am SYSz".center(cols)
		print "Checking system requirements ",
		if(c==0):
			print "-"
			c+=1
		elif(c==1):
			print "\\"
			c+=1
		elif(c==2):
			print "|"
			c+=1
		else:
			print "/"
			c=0
		time.sleep(0.2)
init()

